<Window x:Class="xFrame.WPF.Samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xFrame.WPF.Samples"
        xmlns:xFrame="xFrame:Wpf"
        xmlns:xTheme="xFrame:Wpf.Theming" 
        xmlns:viewmodels="clr-namespace:xFrame.WPF.Samples.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        Style="{StaticResource FluentWindow}"
        xFrame:Window.ShowMinButton="False"
        xFrame:Window.ShowMaxRestoreButton="False"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="auto" Width="auto">

    <xFrame:Window.WindowHeader>
        <Grid/>
    </xFrame:Window.WindowHeader>
    <Grid>
        <TextBlock Text="{Binding LoadingText}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="26"
                   Margin="650,400"/>
    </Grid>
</Window>
