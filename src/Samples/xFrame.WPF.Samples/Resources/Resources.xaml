<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xFrame="xFrame:Wpf">
    <Style TargetType="Window" x:Key="SplashWindowStyle" BasedOn="{StaticResource FluentWindow}">
        <Setter Property="xFrame:Window.ShowMaxRestoreButton" Value="False"/>
        <Setter Property="xFrame:Window.ShowMinButton" Value="False"/>
        <Setter Property="Width" Value="500"/>
        <Setter Property="Height" Value="300"/>
        <Setter Property="SizeToContent" Value="WidthAndHeight" />
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="xFrame:Window.UseDefaultHeader" Value="False"/>
    </Style>
</ResourceDictionary>